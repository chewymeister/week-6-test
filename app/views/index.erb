<ul>
  <form action="/peeps" method="post">
    Name:	 	 <input type="text" name="name">
    Chandle: <input type="text" name="chandle">
    Content: <input type="text" name="content">
   					 <input type="submit" value="Add peep">
  </form>
  
  <% if current_user %>
    <p>Welcome, <%= current_user.chandle %>!</p>
    <form method="post" action="/sessions">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value="Sign out">
    </form>
  <% else %>
    <p>Don't forget to sign up or sign in!</p>
  <% end %>

  <% @peeps.each do |peep| %>
    <li>
    	<h3><%=peep.name %> <span><%=peep.chandle %></span></h3>
    	<p><%=peep.content %></p>
    </li>
  <% end %>
</ul>